{
	"id":"com.moimz.imodule.core",
	"title":"iModule",
	"version":"3.0.0",
	"language":"ko",
	"dependencies":{
		"php":"5.3.3",
		"mysql":"5.0.0",
		"curl":"*",
		"zip":"*",
		"mbstring":"*",
		"gd":"*",
		"encrypt":"*"
	},
	"requirements":{
		"modules/admin":"3.0.0",
		"modules/attachment":"3.0.0",
		"modules/email":"3.0.0",
		"modules/keyword":"3.0.0",
		"modules/member":"3.0.0",
		"modules/push":"3.0.0",
		"modules/wysiwyg":"3.0.0"
	},
	"directories":{
		"attachments":"0707",
		"configs":"0707"
	},
	"configs":["key","db"],
	"preset":"iModule",
	"databases":{
		"article_table":{
			"columns":{
				"module":{
					"type":"varchar",
					"length":20
				},
				"type":{
					"type":"varchar",
					"length":20
				},
				"idx":{
					"type":"int",
					"length":11
				},
				"context":{
					"type":"varchar",
					"length":20
				},
				"reg_date":{
					"type":"int",
					"length":11,
					"default":0
				},
				"update_date":{
					"type":"int",
					"length":11,
					"default":0
				}
			},
			"indexes":{
				"module,type,idx":"primary_key"
			}
		},
		"cron_table":{
			"columns":{
				"host":{
					"type":"varchar",
					"length":100,
					"comment":"자동화작업 대상 사이트 도메인"
				},
				"module":{
					"type":"varchar",
					"length":20
				},
				"type":{
					"type":"enum",
					"length":"'DAILY','WEEKLY','MONTHLY'",
					"default":"DAILY"
				},
				"date":{
					"type":"date"
				},
				"result":{
					"type":"longtext"
				},
				"start_date":{
					"type":"int",
					"length":11
				},
				"end_date":{
					"type":"int",
					"length":11
				},
				"runtime":{
					"type":"double"
				}
			},
			"indexes":{
				"host,module,type,date":"primary_key"
			},
			"comment":"자동화를 위한 cron 정보 테이블"
		},
		"module_table":{
			"columns":{
				"module":{
					"type":"varchar",
					"length":20
				},
				"version":{
					"type":"varchar",
					"length":20
				},
				"hash":{
					"type":"char",
					"length":32
				},
				"database":{
					"type":"varchar",
					"length":20,
					"default":"default"
				},
				"db_size":{
					"type":"bigint",
					"length":15,
					"default":0
				},
				"attachment_size":{
					"type":"bigint",
					"length":15,
					"default":0
				},
				"is_admin":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"is_context":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"TRUE"
				},
				"is_global":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"is_article":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"is_widget":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"is_templet":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"is_external":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"is_sitemap":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"is_cron":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"configs":{
					"type":"text"
				},
				"targets":{
					"type":"text"
				},
				"sort":{
					"type":"int",
					"length":11,
					"default":0
				}
			},
			"indexes":{
				"module":"primary_key"
			}
		},
		"plugin_table":{
			"columns":{
				"plugin":{
					"type":"varchar",
					"length":20
				},
				"version":{
					"type":"varchar",
					"length":20
				},
				"hash":{
					"type":"char",
					"length":32
				},
				"database":{
					"type":"varchar",
					"length":20,
					"default":"default"
				},
				"db_size":{
					"type":"bigint",
					"length":15,
					"default":0
				},
				"is_admin":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"is_active":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"TRUE"
				},
				"configs":{
					"type":"text"
				},
				"targets":{
					"type":"text"
				},
				"sort":{
					"type":"int",
					"length":11,
					"default":0
				}
			},
			"indexes":{
				"plugin":"primary_key"
			}
		},
		"sitemap_table":{
			"columns":{
				"domain":{
					"type":"varchar",
					"length":100
				},
				"language":{
					"type":"char",
					"length":2
				},
				"menu":{
					"type":"varchar",
					"length":20
				},
				"page":{
					"type":"varchar",
					"length":20,
					"default":""
				},
				"title":{
					"type":"varchar",
					"length":100,
					"default":""
				},
				"type":{
					"type":"enum",
					"length":"'PAGE','EXTERNAL','WIDGET','MODULE','HTML','LINK','EMPTY'",
					"default":"EMPTY"
				},
				"layout":{
					"type":"varchar",
					"length":20
				},
				"description":{
					"type":"text",
					"is_null":true
				},
				"icon":{
					"type":"varchar",
					"length":100,
					"is_null":true
				},
				"image":{
					"type":"int",
					"length":11,
					"default":-1
				},
				"header":{
					"type":"longtext",
					"is_null":true
				},
				"footer":{
					"type":"longtext",
					"is_null":true
				},
				"context":{
					"type":"text"
				},
				"is_footer":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"is_hide":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"sort":{
					"type":"int",
					"length":11,
					"default":0
				}
			},
			"indexes":{
				"domain,language,menu,page":"primary_key"
			}
		},
		"site_table":{
			"columns":{
				"domain":{
					"type":"varchar",
					"length":100
				},
				"language":{
					"type":"char",
					"length":2
				},
				"title":{
					"type":"varchar",
					"length":100
				},
				"alias":{
					"type":"text",
					"is_null":true
				},
				"description":{
					"type":"text",
					"is_null":true
				},
				"templet":{
					"type":"varchar",
					"length":20,
					"default":"default"
				},
				"templet_configs":{
					"type":"text",
					"is_null":true
				},
				"image":{
					"type":"int",
					"length":11,
					"default":-1
				},
				"logo":{
					"type":"varchar",
					"length":150,
					"default":"{\"default\":-1,\"footer\":-1}"
				},
				"emblem":{
					"type":"int",
					"length":11,
					"default":-1
				},
				"favicon":{
					"type":"int",
					"length":11,
					"default":-1
				},
				"maskicon":{
					"type":"varchar",
					"length":50,
					"default":"{\"icon\":-1,\"color\":\"#0578bf\"}"
				},
				"member":{
					"type":"enum",
					"length":"'UNIQUE','UNIVERSAL'",
					"default":"UNIVERSAL"
				},
				"is_ssl":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"is_default":{
					"type":"enum",
					"length":"'TRUE','FALSE'",
					"default":"FALSE"
				},
				"sort":{
					"type":"int",
					"length":11,
					"default":0
				}
			},
			"indexes":{
				"domain,language":"primary_key"
			}
		}
	}
}